<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PressPerSecondTestFragment"
    >

    <Button
        android:id="@+id/btnReaction"
        style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"
        android:layout_width="256dp"
        android:layout_height="218dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="250dp"
        android:layout_weight="1"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewPPS" />

    <TextView
        android:id="@+id/txtViewPPS"
        android:layout_width="178dp"
        android:layout_height="101dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="117dp"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/btnReaction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStartReactionTest"
        android:layout_width="170dp"
        android:layout_height="96dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="24dp"
        android:text="Start"
        app:layout_constraintBottom_toTopOf="@+id/btnReaction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewPPS" />
</androidx.constraintlayout.widget.ConstraintLayout>